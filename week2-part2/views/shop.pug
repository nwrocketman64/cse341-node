extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/main.css")

block content 
    main 
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item
                        header.card_header 
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="picture")
                        .card__content 
                            h2.product_price $19.99
                            p.product__description A very interesting book.
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products